<div class='flex-container'>

    <form id='update-form' method='post' action='/settings/instructorUpdate'>
        <h1 class='title'>Instructor Settings</h1>
        <br />
        <br />
        <label for='instructorFirstName' class = 'subtitle'>First Name</label>
        <br />
        <input type='text' id='instructorFirstName' name='instructorFirstName' />
        <br />
        <br />
        <br />
        <label for='instructorLastName' class = 'subtitle'>Last Name</label>
        <br />
        <input type='text' id='instructorLastName' name='instructorLastName' />
        <br />
        <br />
        <br />
        <label for='instructorEmail' class = 'subtitle'>Email</label>
        <br />
        <input type='text' id='instructorEmail' name='instructorEmail' />
        <br />
        <br />
        <br />
        <label for='instructorUsername' class = 'subtitle'>Username</label>
        <br />
        <input type='text' id='instructorUsername' name='instructorUsername' />
        <br />
        <br />
        <br />
        <label for='instructorPassword' class = 'subtitle'>Password</label>
        <br />
        <input type='password' id='instructorPassword' name='instructorPassword' />
        <br />
        <br />
        <br />
        <button type='submit' id='update-login-button'>Submit</button>
        <br />
        <br />
        <br />
        <a href='/' class='subtitle center'>Click here to go back to home page</a>
    </form>

    <form id='delete-form' method='post' action='/settings/instructorDelete'>
        <button type='submit' id='delete-account-button'>Delete Account</button>
    </form>

    {{InstructorError}}

</div>